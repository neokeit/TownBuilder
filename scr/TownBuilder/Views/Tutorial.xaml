<Window x:Class="TownBuilder.Views.Tutorial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Tutorial" Height="200" Width="304">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
        <TextBlock TextWrapping="Wrap">Bienvenido a TownBuilder! Tendras que crear tu propio pueblo y hacerlo crecer todo lo posible.</TextBlock>
            <TextBlock TextWrapping="Wrap">Para ello tendras que hacer uso de tu mazo de cartas y de los recuersos del pueblo, cuanto mas crezcas mas recursos generaras y mas necesitaras.</TextBlock>
            <TextBlock TextWrapping="Wrap">.</TextBlock>
        </StackPanel>
        <Button Grid.Row="1">Siguiente</Button>
    </Grid>
</Window>
